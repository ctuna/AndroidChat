<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/tangerine_light"
                android:endColor="@color/tangerine_light"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item android:state_pressed="false" 
        android:state_focused="false" >
        <shape>
            <gradient
                android:startColor="@color/tangerine"
                android:endColor="@color/tangerine"
                android:angle="270" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    
    <item android:state_focused="true"  >
        <shape>
            <gradient
                android:endColor="@color/tangerine"
                android:startColor="@color/tangerine"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@android:color/white" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

</selector>